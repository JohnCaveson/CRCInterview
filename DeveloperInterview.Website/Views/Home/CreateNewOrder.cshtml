@model DeveloperInterview.Website.Models.CreateNewOrderViewModel

@{
    ViewBag.Title = "CreateNewOrder";
}

<h2>Add New Order</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <label>Order For:</label>
                <select name="CustomerId" class="form-control">
                    @foreach (var c in Model.Customers)
                    {
                        <option value="@c.Id">@c.FirstName @c.LastName</option>
                    }
                </select>
                <label>Product:</label>
                <select name="ProductId" class="form-control">
                    @foreach (var p in Model.Product)
                    {
                        <option value="@p.Id">@p.Name</option>
                    }
                </select>
                <label>Quantity:</label>
                <input class="form-control" type="number" name="Quantity" required>
                <label>Rating:</label>
                <select name="ProductRating" class="form-control">
                    @for (int i = 1; i < 11; i++)
                    {
                        <option value=@i>@i</option>
                    }
                </select>
                <br />
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Orders", "Orders")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
